	<!--<select id="findAll" resultMap="menuMap">-->
	<select id="findAll" resultType="MenuView">
		select
			*
		from menu_view
		<where>
			<if test="categoryId != null">
				category_id = #{categoryId}
			</if>
			<if test="query != null">
				kor_name like '%${query}%'
			</if>
		</where>
		limit #{offset}, #{size}
	</select>

	<select id="findById" resultType="Menu">
		select
			*
		from menu_view
		where id = #{id}
	</select>
	
	<select id="count" resultType="Integer">
		select
			count(id)
		from menu_view

		<where>
			<if test="categoryId != null">
				category_id = #{categoryId}
			</if>
			<if test="query != null">
				kor_name like '%${query}%'
			</if>
		</where>
	</select>
</mapper>